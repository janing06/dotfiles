{
  // ===============================
  // üìÅ Workspace & Linting
  // ===============================
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // ===============================
  // üßπ Formatting
  // ===============================
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
    // intentionally removed "source.fixAll.eslint" to prevent ESLint overriding Biome
  },

  // -------------------------------
  // Language-specific formatters
  // -------------------------------
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },

  // ===============================
  // üí¨ VS Live Share
  // ===============================
  "liveshare.allowGuestDebugControl": true,
  "liveshare.allowGuestTaskControl": true,

  // ===============================
  // üíª Terminal
  // ===============================
  "terminal.integrated.env.osx": {},

  // ===============================
  // üß† Editor Behavior
  // ===============================
  "editor.lineNumbers": "relative",
  "editor.hover.enabled": true,
  "editor.hover.delay": 300,
  "editor.matchBrackets": "never",
  "editor.renderLineHighlight": "none",
  "editor.occurrencesHighlight": "off",
  "editor.colorDecorators": false,
  "editor.renderControlCharacters": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.lightbulb.enabled": "off",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.tabSize": 2,

  // ===============================
  // üß© Workbench / UI
  // ===============================
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "ayu",
  "workbench.colorTheme": "Catppuccin Macchiato Bordered",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.tips.enabled": false,
  "window.title": " ",

  // ===============================
  // üóÇÔ∏è Explorer
  // ===============================
  "explorer.confirmDelete": false,

  // ===============================
  // üîê Security
  // ===============================
  "security.workspace.trust.untrustedFiles": "open",

  // ===============================
  // ‚öôÔ∏è JavaScript / TypeScript
  // ===============================
  "javascript.updateImportsOnFileMove.enabled": "always",

  // ===============================
  // üåç Translation
  // ===============================
  "google-translate.firstLanguage": "en",

  // ===============================
  // üß≠ Cursor & Editor Behavior
  // ===============================
  "cursor.cpp.disabledLanguages": ["plaintext", "markdown", "scminput"],

  // ===============================
  // üé® Icon & Theme Settings
  // ===============================
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.folders.color": "#90a4ae",
  "material-icon-theme.activeIconPack": "nest",
  "extensions.ignoreRecommendations": true,

  // ===============================
  // üîç Git & GitLens
  // ===============================
  "git.openRepositoryInParentFolders": "never",
  "git.decorations.enabled": false,
  "gitlens.views.scm.grouped.views": {
    "commits": true,
    "branches": true,
    "remotes": true,
    "stashes": true,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "repositories": false,
    "searchAndCompare": true,
    "launchpad": false
  },

  // ===============================
  // ‚úèÔ∏è Spellchecker
  // ===============================
  "cSpell.userWords": [
    "apexcharts",
    "chakra",
    "Clusterer",
    "Dehaze",
    "dify",
    "gantt",
    "hasura",
    "markerclusterer",
    "nozato",
    "papaparse",
    "refinedev",
    "spiderfied",
    "Spiderfier",
    "unparse",
    "upserted",
    "usecase"
  ],

  // ===============================
  // üåà Colorize
  // ===============================
  "colorize.languages": ["typescript"],
  "colorize.decoration_type": "dot",

  // ===============================
  // üßò‚Äç‚ôÇÔ∏è Neovim Extension
  // ===============================
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // ===============================
  // ü™Ñ Biome
  // ===============================
  "biome.suggestInstallingGlobally": false,

  // ===============================
  // üß© Diff
  // ===============================
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.layoutControl.enabled": false,
  "workbench.navigationControl.enabled": false
}
